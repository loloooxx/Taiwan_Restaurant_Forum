<div class="container">
  <div class="row">

    <ul class="nav nav-tabs">
      <li role="presentation" >
        <%= link_to 'HOME', root_path %>
      </li>
      <li role="presentation">
        <%= link_to 'NEWS FEEDS', feeds_restaurants_path %>
      </li>
      <li role="presentation" class="active">
        <%= link_to 'FOODIES', users_path %>
      </li>
    </ul>

  </div>
</div>

<div class="container">
  <div class="row">

    <div class="col-md-12">
      <div class="page-header">
        <h1>FODDIES</h1>
      </div>
    </div>

    <% @users.each do |user| %>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center user-item">

        <%= link_to user_path(user) do %>
          <!-- 可先利用 Placeholder 如 <img src="http://via.placeholder.com/128x128"> 產生圖片 -->
          <%= image_tag(user.avatar, class: "img-rounded") %>
          <h4><%= user.name %></h4>
        <% end %>

        <%= render partial: "shared/follow", locals: {user: user} %>

      </div>
    <% end %>

  </div>
</div>